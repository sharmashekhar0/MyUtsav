<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appbar">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_toolbar"
        android:background="@color/navbar"
        app:title="Home"
        app:menu="@menu/frag_home"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#0B0909"
        android:paddingLeft="10dp"
        android:padding="20dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#EA739C"
        android:shadowDx="1"
        android:elevation="10dp"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appbar"
        tools:ignore="NotSibling"></TextView>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:padding="20dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#EA739C"
        android:shadowDx="1"
        android:elevation="10dp"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shadow"
        android:textColor="#EDEA06"
       android:layout_below="@+id/userid"
        tools:ignore="NotSibling"></TextView>
    <TextView
        android:id="@+id/eventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:padding="20dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#EA739C"
        android:shadowDx="1"
        android:shadowDy="1"
        android:elevation="10dp"
        android:shadowRadius="2"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shadow"
        android:textColor="#EDEA06"
        android:layout_below="@+id/username"
        tools:ignore="NotSibling"></TextView>
    <TextView
        android:id="@+id/remaindate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:padding="20dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#EA739C"
        android:shadowDx="1"
        android:shadowDy="1"
        android:elevation="10dp"
        android:shadowRadius="2"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shadow"
        android:textColor="#EDEA06"
        android:layout_below="@+id/eventdate"
        tools:ignore="NotSibling"></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/remaindate"
        android:scrollbars="vertical"
        android:padding="10dp">
        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        >
      <Button
          android:id="@+id/menu"
          android:text="Menu"
          android:background="@drawable/shadow"
          android:textSize="20dp"
          android:textColor="#fff"
          android:elevation="10dp"
          android:shadowColor="#292525"
          android:shadowRadius="1"
          android:shadowDy="2"
          android:shadowDx="2"
          android:layout_gravity="fill"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_margin="5sp"
          ></Button>
        <Button
            android:id="@+id/budget"
            android:text="Budget"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:background="@drawable/shadow"
            android:textSize="20dp"
            android:textColor="#fff"
            android:elevation="10dp"
            android:shadowColor="#292525"
            android:shadowRadius="1"
            android:shadowDy="2"
            android:shadowDx="2"
            ></Button>
        <Button
            android:id="@+id/help"
            android:text="Helper"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:background="@drawable/shadow"
            android:textSize="20dp"
            android:textColor="#fff"
            android:elevation="10dp"
            android:shadowColor="#292525"
            android:shadowRadius="1"
            android:shadowDy="2"
            android:shadowDx="2"
            ></Button>

            <Button
                android:id="@+id/event"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5sp"
                android:text="Tasks"
                android:background="@drawable/shadow"
                android:textSize="20dp"
                android:textColor="#fff"
                android:elevation="10dp"
                android:shadowColor="#292525"
                android:shadowRadius="1"
                android:shadowDy="2"
                android:shadowDx="2"></Button>
        <Button
            android:id="@+id/checklist"
            android:text="CheckList"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:background="@drawable/shadow"
            android:textSize="20dp"
            android:textColor="#fff"
            android:elevation="10dp"
            android:shadowColor="#292525"
            android:shadowRadius="1"
            android:shadowDy="2"
            android:shadowDx="2"
            ></Button>
        <Button
            android:id="@+id/guest"
            android:text="Guest"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:background="@drawable/shadow"
            android:textSize="20dp"
            android:textColor="#fff"
            android:elevation="10dp"
            android:shadowColor="#292525"
            android:shadowRadius="1"
            android:shadowDy="2"
            android:shadowDx="2"
            ></Button>





    </GridLayout>
</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/navbar"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/nav_item"
         />

</RelativeLayout>